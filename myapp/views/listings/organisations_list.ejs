<%- include('../search_pagination.ejs', { search, currentPage, totalPages }) %>
<div class="tw-overflow-x-auto tw-bg-white tw-shadow-lg tw-rounded-lg">
    <table class="tw-min-w-full tw-bg-white tw-mb-4">
        <thead class="tw-bg-gray-200">
        <tr>
            <th class="tw-py-2 tw-px-4 tw-text-left">Num√©ro Siren</th>
            <th class="tw-py-2 tw-px-4 tw-text-left">Nom</th>
            <th class="tw-py-2 tw-px-4 tw-text-left">Type</th>
            <th class="tw-py-2 tw-px-4 tw-text-left">Adresse Administrative</th>
            <th class="tw-py-2 tw-px-4 tw-text-left">Statut</th>
            <th class="tw-py-2 tw-px-4 tw-text-left">Action</th>
        </tr>
        </thead>
        <tbody>
        <% organisations.forEach(function(organisation) { %>
            <tr class="hover:tw-bg-gray-100">
                <td class="tw-py-2 tw-px-4"><%= organisation.NumeroSiren %></td>
                <td class="tw-py-2 tw-px-4"><%= organisation.Nom %></td>
                <td class="tw-py-2 tw-px-4"><%= organisation.Type %></td>
                <td class="tw-py-2 tw-px-4"><%= organisation.AdresseAdministrative %></td>
                <td class="tw-py-2 tw-px-4"><%= organisation.StatutOrganisation %></td>
                <td class="tw-py-2 tw-px-4">
                    <form action="/organizations/delete_organisation" method="post" class="tw-inline-block">
                        <input type="hidden" name="numeroSiren" value="<%= organisation.NumeroSiren %>">
                        <button type="submit" class="tw-bg-red-500 hover:tw-bg-red-700 tw-text-white tw-px-4 tw-py-2 tw-rounded-md">Supprimer</button>
                    </form>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</div>
<%- include('../pagination.ejs', { currentPage, totalPages, search }) %>
