<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('../head') %>
    <title>Dashboard Recruteur</title>
</head>
<body class="tw-bg-gray-100 tw-font-sans tw-leading-normal tw-tracking-normal">
<%- include('../navbar', { activePage: 'dashboard' }) %>
<div class="tw-container tw-mx-auto tw-px-4 tw-my-8">
    <%- include("../message.ejs") %>
    <section id="overview" class="tw-mb-8">
        <h2 class="tw-text-2xl tw-font-semibold tw-text-gray-800 tw-mb-4">Aperçu</h2>
        <div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-2 tw-gap-4">
            <div class="tw-bg-blue-600 tw-text-white tw-shadow-lg tw-rounded-lg tw-p-6">
                <h3 class="tw-text-xl">Offre<%= offres.length > 1 ? 's' : '' %> publiée<%= offres.length > 1 ? 's' : '' %> par moi</h3>
                <p class="tw-text-4xl"><%= offres.length %></p>
            </div>
            <div class="tw-bg-green-500 tw-text-white tw-shadow-lg tw-rounded-lg tw-p-6">
                <h3 class="tw-text-xl">Candidature<%= candidatures.length > 1 ? 's' : '' %> reçue<%= candidatures.length > 1 ? 's' : '' %></h3>
                <p class="tw-text-4xl"><%= candidatures.length %></p>
            </div>
        </div>
    </section>

    <section id="offers" class="tw-mb-8">
        <h2 class="tw-text-2xl tw-font-semibold tw-text-gray-800 tw-mb-4">Mes Offres</h2>
        <div class="tw-overflow-x-auto tw-bg-white tw-shadow-lg tw-rounded-lg">
            <table class="tw-min-w-full tw-bg-white">
                <thead class="tw-bg-gray-200">
                <tr>
                    <th class="tw-w-1/3 tw-py-2">Offre</th>
                    <th class="tw-w-1/3 tw-py-2">Date de validité</th>
                    <th class="tw-w-1/3 tw-py-2 tw-text-center">État</th>
                </tr>
                </thead>
                <tbody>
                <% offres.slice(0, 5).forEach(offre => { %>
                    <tr class="hover:tw-bg-gray-100">
                        <td class="tw-py-2 tw-px-4"><%= offre.Intitule %></td>
                        <td class="tw-py-2 tw-px-4"><%= new Date(offre.DateValidite).toLocaleDateString() %></td>
                        <td class="tw-py-2 tw-px-4 tw-text-center"><%= offre.Etat %></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
        <div class="tw-mt-4 tw-text-right">
            <a href="/jobs/my_offers" class="tw-bg-blue-600 hover:tw-bg-blue-700 tw-text-white tw-font-semibold tw-py-2 tw-px-4 tw-rounded-lg">Voir toutes les offres</a>
        </div>
    </section>

    <section id="applications" class="tw-mb-8">
        <h2 class="tw-text-2xl tw-font-semibold tw-text-gray-800 tw-mb-4">Candidatures Reçues</h2>
        <div class="tw-grid tw-grid-cols-1 md:tw-grid-cols-2 lg:tw-grid-cols-3 tw-gap-4">
            <% candidatures.slice(0, 5).forEach(candidature => { %>
                <div class="tw-bg-white tw-shadow-lg tw-rounded-lg tw-p-6">
                    <h5 class="tw-text-xl tw-font-semibold"><%= candidature.Intitule %></h5>
                    <p class="tw-text-gray-700">Candidat: <%= candidature.Prenom %> <%= candidature.Nom %></p>
                    <p class="tw-text-gray-700">Date de candidature: <%= new Date(candidature.DateCandidature).toLocaleDateString() %></p>
                </div>
            <% }) %>
        </div>
        <div class="tw-mt-4 tw-text-right">
            <a href="/applications/incoming-applications" class="tw-bg-green-600 hover:tw-bg-green-700 tw-text-white tw-font-semibold tw-py-2 tw-px-4 tw-rounded-lg">Voir toutes les candidatures</a>
        </div>
    </section>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
