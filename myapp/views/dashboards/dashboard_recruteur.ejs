<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('../head') %>
    <title>Dashboard Recruteur</title>
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
<%- include('../navbar', { activePage: 'dashboard' }) %>
<div class="container mx-auto my-8 p-4">
    <section id="overview" class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Aperçu</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-blue-600 text-white shadow-lg rounded-lg p-6">
                <h3 class="text-xl">Offre<%= offres.length > 1 ? 's' : '' %> publiée<%= offres.length > 1 ? 's' : '' %></h3>
                <p class="text-4xl"><%= offres.length %></p>
            </div>
            <div class="bg-green-500 text-white shadow-lg rounded-lg p-6">
                <h3 class="text-xl">Candidature<%= candidatures.length > 1 ? 's' : '' %> reçue<%= candidatures.length > 1 ? 's' : '' %></h3>
                <p class="text-4xl"><%= candidatures.length %></p>
            </div>
        </div>
    </section>

    <section id="offers" class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Mes Offres</h2>
        <div class="overflow-x-auto bg-white shadow-lg rounded-lg">
            <table class="min-w-full bg-white">
                <thead class="bg-gray-200">
                <tr>
                    <th class="w-1/4 py-2">Offre</th>
                    <th class="w-1/4 py-2">Date de validité</th>
                    <th class="w-1/4 py-2 text-center">État</th>
                </tr>
                </thead>
                <tbody>
                <% offres.slice(0, 5).forEach(offre => { %>
                    <tr class="hover:bg-gray-100">
                        <td class="py-2 px-4"><%= offre.Intitule %></td>
                        <td class="py-2 px-4"><%= new Date(offre.DateValidite).toLocaleDateString() %></td>
                        <td class="py-2 px-4 text-center"><%= offre.Etat %></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
        <div class="mt-4 text-right">
            <a href="/offers/my-offers" class="btn btn-primary bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg">Voir toutes les offres</a>
        </div>
    </section>

    <section id="applications" class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Candidatures Reçues</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% candidatures.slice(0, 5).forEach(candidature => { %>
                <div class="bg-white shadow-lg rounded-lg p-6">
                    <h5 class="text-xl font-semibold"><%= candidature.Intitule %></h5>
                    <p class="text-gray-700">Candidat: <%= candidature.Prenom %> <%= candidature.Nom %></p>
                    <p class="text-gray-700">Date de candidature: <%= new Date(candidature.DateCandidature).toLocaleDateString() %></p>
                </div>
            <% }) %>
        </div>
        <div class="mt-4 text-right">
            <a href="/applications/incoming-applications" class="btn btn-success bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-lg">Voir toutes les candidatures</a>
        </div>
    </section>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
