<form action="/jobs/edit_offer" method="post" class="tw-space-y-4 tw-w-full sm:tw-max-w-lg tw-mx-auto">
    <input type="hidden" name="idOffre" value="<%= offre.IdOffre %>">

    <div>
        <label for="dateValidité" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Date de Validité</label>
        <input type="date" class="tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" id="dateValidité" name="dateValidité" value="<%= offre.DateValiditeFormatted %>" required>
    </div>
    <div>
        <label for="listePieces" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Liste des Pièces</label>
        <textarea class="tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" id="listePieces" name="listePieces" rows="3" required><%= offre.ListePieces %></textarea>
    </div>
    <div>
        <label for="nombrePieces" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Nombre de Pièces</label>
        <input type="number" class="tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" id="nombrePieces" name="nombrePieces" value="<%= offre.NombrePieces %>" required>
    </div>
    <div>
        <label for="idFiche" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Fiche de Poste</label>
        <select class="tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" id="idFiche" name="idFiche" required>
            <% fiches.forEach(function(fiche) { %>
                <option value="<%= fiche.IdFiche %>" <%= fiche.IdFiche === offre.IdFiche ? 'selected' : '' %>><%= fiche.Intitule %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="tw-w-full tw-bg-gradient-to-r tw-from-blue-500 tw-to-purple-600 tw-text-white tw-font-semibold tw-py-2 tw-px-4 tw-rounded-md tw-shadow-lg hover:tw-bg-gradient-to-l focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-offset-2 focus:tw-ring-blue-500 tw-transition tw-duration-300 tw-ease-in-out">
        Mettre à Jour
    </button>
</form>
