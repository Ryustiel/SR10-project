<form id="editEmailForm" method="post" action="/users/update-email" class="tw-space-y-4 tw-max-w-md tw-mx-auto">
    <input type="hidden" name="userId" value="<%= user.Email %>">
    <div class="tw-mt-2">
        <label for="newEmail" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Nouvel Email</label>
        <input type="email" class="tw-mt-1 tw-block tw-w-full tw-px-4 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500 focus:tw-border-blue-500" id="newEmail" name="newEmail" required value="<%= user.Email %>">
    </div>
    <button type="submit" class="tw-w-full tw-bg-gradient-to-r tw-from-blue-500 tw-to-purple-600 tw-text-white tw-font-semibold tw-py-2 tw-px-4 tw-rounded-md tw-shadow-lg hover:tw-bg-gradient-to-l focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-offset-2 focus:tw-ring-blue-500 tw-transition tw-duration-300 tw-ease-in-out">
        Enregistrer
    </button>
</form>
