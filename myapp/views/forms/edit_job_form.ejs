<form action="/jobs/edit_job" method="post" class="tw-space-y-4 tw-w-full sm:tw-max-w-lg tw-mx-auto">
    <input type="hidden" name="idFiche" value="<%= fiche.IdFiche %>">

    <div>
        <label for="intitule" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Intitulé</label>
        <input type="text" class="tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" id="intitule" name="intitule" value="<%= fiche.Intitule %>" required>
    </div>
    <div>
        <label for="statutPoste" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Statut du Poste</label>
        <input type="text" class="tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" id="statutPoste" name="statutPoste" value="<%= fiche.StatutPoste %>" required>
    </div>
    <div>
        <label for="responsableHierarchique" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Responsable Hiérarchique</label>
        <input type="text" class="tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" id="responsableHierarchique" name="responsableHierarchique" value="<%= fiche.ResponsableHierarchique %>" required>
    </div>
    <div>
        <label for="typeMetier" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Type de Métier</label>
        <input type="text" class="tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" id="typeMetier" name="typeMetier" value="<%= fiche.TypeMetier %>" required>
    </div>
    <div>
        <label for="lieuMission" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Lieu de Mission</label>
        <input type="text" class="tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" id="lieuMission" name="lieuMission" value="<%= fiche.LieuMission %>" required>
    </div>
    <div>
        <label for="rythme" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Rythme</label>
        <input type="text" class="tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" id="rythme" name="rythme" value="<%= fiche.Rythme %>" required>
    </div>
    <div>
        <label for="salaire" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Salaire</label>
        <input type="number" class="tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" id="salaire" name="salaire" value="<%= fiche.Salaire %>" required>
    </div>
    <div>
        <label for="description" class="tw-block tw-text-sm tw-font-semibold tw-text-gray-700 tw-mb-2">Description</label>
        <textarea class="tw-w-full tw-px-3 tw-py-2 tw-border tw-border-gray-300 tw-rounded-md focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-blue-500" id="description" name="description" rows="4" required><%= fiche.Description %></textarea>
    </div>
    <button type="submit" class="tw-w-full tw-bg-gradient-to-r tw-from-blue-500 tw-to-purple-600 tw-text-white tw-font-semibold tw-py-2 tw-px-4 tw-rounded-md tw-shadow-lg hover:tw-bg-gradient-to-l focus:tw-outline-none focus:tw-ring-2 focus:tw-ring-offset-2 focus:tw-ring-blue-500 tw-transition tw-duration-300 tw-ease-in-out">
        Mettre à Jour
    </button>
</form>
