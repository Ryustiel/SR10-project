<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Offres d'Emploi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>

<%- include('navbar.ejs') %>

<div class="container mt-5">
    <h1 class="mb-4">Liste des Offres d'Emploi</h1>
    <table class="table">
        <thead class="table-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">État</th>
            <th scope="col">Date de Validité</th>
            <th scope="col">Liste des Pièces</th>
            <th scope="col">Email du Recruteur</th>
        </tr>
        </thead>
        <tbody>
        <% offres.forEach((offre) => { %>
            <tr>
                <td><%= offre.IdOffre %></td>
                <td><%= offre.Etat %></td>
                <td><%= offre.DateValidite ? new Date(offre.DateValidite).toISOString().slice(0, 10) : 'N/A' %></td>
                <td><%= offre.ListePieces %></td>
                <td><%= offre.IdRecruteur %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>