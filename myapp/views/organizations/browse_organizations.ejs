<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Organisations</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Plateforme de Recrutement</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="#">Accueil</a>
                </li>
                <!-- Autres liens de navigation au besoin -->
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-5">
    <h1 class="mb-4">Liste des Organisations</h1>
    <table class="table">
        <thead class="table-dark">
        <tr>
            <th scope="col">Num√©ro Siren</th>
            <th scope="col">Nom</th>
            <th scope="col">Type</th>
            <th scope="col">Adresse Administrative</th>
            <th scope="col">Statut</th>
        </tr>
        </thead>
        <tbody>
        <% organizations.forEach((organization) => { %>
            <tr>
                <td><%= organization.NumeroSiren %></td>
                <td><%= organization.Nom %></td>
                <td><%= organization.Type %></td>
                <td><%= organization.AdresseAdministrative %></td>
                <td><%= organization.StatutOrganisation %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>