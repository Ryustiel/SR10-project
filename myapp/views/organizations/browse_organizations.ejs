<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Organisations</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>

<%- include('navbar.ejs') %>

<div class="container mt-5">
    <h1 class="mb-4">Liste des Organisations</h1>
    <table class="table">
        <thead class="table-dark">
        <tr>
            <th scope="col">Num√©ro Siren</th>
            <th scope="col">Nom</th>
            <th scope="col">Type</th>
            <th scope="col">Adresse Administrative</th>
            <th scope="col">Statut</th>
        </tr>
        </thead>
        <tbody>
        <% organizations.forEach((organization) => { %>
            <tr>
                <td><%= organization.numerosiren %></td>
                <td><%= organization.nom %></td>
                <td><%= organization.type %></td>
                <td><%= organization.adresseadministrative %></td>
                <td><%= organization.statutorganisation %></td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
